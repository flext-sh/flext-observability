# FLEXT Observability Configuration
# Copy this to .env and customize for your environment

DEBUG=true
# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=9090
WORKERS=2

# Prometheus Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PATH=/metrics
PROMETHEUS_PORT=9090
PROMETHEUS_REGISTRY=default

JAEGER_ENDPOINT=http://localhost:14268/api/traces
# OpenTelemetry Configuration
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=flext-observability

GRAFANA_API_KEY=
GRAFANA_ORG_ID=1
# Grafana Integration
GRAFANA_URL=http://localhost:3000

DATABASE_POOL_SIZE=10
# Database for Metrics Storage
DATABASE_URL=postgresql://flext:password@localhost:5432/flext_observability

METRICS_CACHE_TTL=300
# Redis for Caching
REDIS_URL=redis://localhost:6379/3

# External Services to Monitor
FLEXT_API_URL=http://localhost:8000
FLEXT_GRPC_URL=localhost:50051
FLEXT_WEB_URL=http://localhost:8080

# Alert Configuration
ALERTS_ENABLED=true
ALERT_MANAGER_URL=http://localhost:9093
WEBHOOK_URL=

COLLECT_APPLICATION_METRICS=true
COLLECT_BUSINESS_METRICS=true
# Metrics Collection
COLLECT_SYSTEM_METRICS=true
SCRAPE_INTERVAL=15

# Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

ELASTICSEARCH_URL=http://localhost:9200
LOGSTASH_HOST=localhost
LOGSTASH_PORT=5044
# Log Aggregation
LOG_AGGREGATION_ENABLED=false
